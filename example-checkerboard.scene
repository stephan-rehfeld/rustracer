background_color: 0.0 0.0 0.0

ambient_light: 0.0 0.0 0.0

plane {
    position: 0.0 -1.0 0.0
    scale: 1.0 1.0 1.0
    rotation: 0.0 0.0 0.0
    material: lambert_material {
        texture: checkerboard_texture {
            a: 0.2 0.2 0.2
            b: 0.8 0.8 0.8
        }
    }
}

triangle {
    position: 0.0 0.0 0.0
    scale: 1.0 1.0 1.0
    rotation: 0.0 0.0 0.0
    a: -3.0 3.0 -3.0
    b: -1.0 3.0 -3.0
    c: -1.0 1.0 -3.0
    na: 0.0 0.0 1.0
    nb: 0.0 0.0 1.0
    nc: 0.0 0.0 1.0
    uva: 0.0 0.0
    uvb: 1.0 0.0
    uvc: 0.0 1.0
    material: lambert_material {
        texture: single_color_texture {
            color: 1.0 0.0 0.0
        }
    }
}

box {
    position: -2.0 0.0 0.0
    scale: 0.5 0.5 0.5
    rotation: 35.0 45.0 0.0
    material: lambert_material {
        texture: checkerboard_texture {
            a: 0.0 0.0 1.0
            b: 0.3 0.3 0.3
        }
    }
}

sphere {
    position: 1.0 1.0 0.0
    scale: 1.0 1.0 1.0
    rotation: 0.0 0.0 0.0
    material: phong_material {
        diffuse_texture: chess_board_texture {
            a: 0.0 0.8 0.0
            b: 0.3 0.3 0.3
        }
        specular_texture: single_color_texture {
            color: 1.0 1.0 1.0
        }
        exponent: 64.0
    }
}

perspective_camera {
    id: main
    eye_position: 0.0 0.0 3.0
    gaze_direction: 0.0 0.0 -1.0
    up_vector: 0.0 1.0 0.0
    field_of_view: 90
}

orthographic_camera {
    id: persp
    eye_position: 10.0 9.0 10.0
    gaze_direction: -1.0 -1.0 -1.0
    up_vector: 0.0 1.0 0.0
    scale: 10
}

point_light {
    position: 0.0 2.0 3.0
    color: 0.8 0.8 0.8
}

spot_light {
    color: 0.3 0.3 0.3
    position: -6.0 4.0 0.0
    direction: 1.0 -1.0 0.0
    angle: 15.0 
}
