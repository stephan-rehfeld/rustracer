background_color: 0.7 0.7 0.7

ambient_light: 0.1 0.1 0.1

plane {
    position: 0.0 0.0 0.0
    scale: 1.0 1.0 1.0
    rotation: 0.0 0.0 0.0
    material: lambert_material {
        texture: grid_texture {
            border: 0.2 0.2 0.2
            face: 0.8 0.8 0.8
            width: 0.1
        }
    }
}

sphere {
    position: -3.0 1.0 -3.0
    scale: 1.0 1.0 1.0
    rotation: 0.0 0.0 0.0
    material: lambert_material {
        texture: single_color_texture {
            color: 0.8 0.2 0.2
        }
    }
}
sphere {
    position: 0.0 1.0 0.0
    scale: 1.0 1.0 1.0
    rotation: 0.0 0.0 0.0
    material: lambert_material {
        texture: single_color_texture {
            color: 0.2 0.8 0.2
        }
    }
}

sphere {
    position: 3.0 1.0 3.0
    scale: 1.0 1.0 1.0
    rotation: 0.0 0.0 0.0
    material: lambert_material {
        texture: single_color_texture {
            color: 0.2 0.2 0.8
        }
    }
}
perspective_camera {
    id: main
    eye_position: 0.0 1.0 8.0
    gaze_direction: 0.0 0.0 -1.0
    up_vector: 0.0 1.0 0.0
    field_of_view: 90
    lens_radius: 0.10
    focal_length: 8.0
}

spherical_camera {
    id: spherical
    eye_position: 0.0 1.0 8.0
    gaze_direction: 0.0 0.0 -1.0
    up_vector: 0.0 1.0 0.0
    field_of_view: 180
}

pinhole_camera {
    id: second
    eye_position: 0.0 1.0 3.0
    gaze_direction: 0.0 0.0 -1.0
    up_vector: 0.0 1.0 0.0
    field_of_view: 90
}

fisheye_camera {
    id: fish
    eye_position: 0.0 1.0 3.0
    gaze_direction: 0.0 0.0 -1.0
    up_vector: 0.0 1.0 0.0
    psi: 180
}

point_light {
    position: 0.0 2.0 0.0
    color: 0.8 0.8 0.8
}

point_light {
    position: 0.0 1.0 3.0
    color: 0.8 0.8 0.8
}
